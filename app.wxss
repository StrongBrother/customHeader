/**app.wxss**/

/* css reset */

page {
    font-family: 'PingFang SC',
                 "Helvetica Neue",
                 Helvetica,
                 "microsoft yahei",
                 arial,
                 STHeiTi,
                 sans-serif;
    font-size: 24rpx;
    color: #333;
    background-color: #f5f5f5;
}

button {
    padding: 0;
    background: transparent;
    height: 100%;
    line-height: inherit;
    font-size: inherit;
}

button::after {
    border: 0;
}

navigator {
    width: 100%;
    height: 100%;
}

textarea {
    width: 100%;
    height: 100%;
}

image {
    width: 100%;
    height: 100%;
    vertical-align: top;
}

video {
    width: 100%;
}

